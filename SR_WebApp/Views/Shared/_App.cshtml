<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1" />
    <title>@ViewBag.Title - Smart Receptionist Console</title>

    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:400,100,100italic,300,300italic,400italic,500,500italic,700italic,700,900,900italic">

    <!-- Styles -->
    <style>
        [fuse-cloak],
        .fuse-cloak {
            display: none !important;
        }

        @@media (min-width: 576px) {
            .goog-te-gadget {
                padding-left: 1.6rem;
                padding-right: 1.6rem;
            }
        }

        @@media (max-width: 576px) {
            .goog-te-gadget {
                padding-left: .8rem;
                padding-right: .8rem;
            }
        }

        .goog-te-gadget {
            font-family: 'Roboto', sans-serif !important;
        }

        .goog-te-combo {
            font-family: 'Roboto', sans-serif !important;
        }

        #license-footer {
            -webkit-align-self: flex-end;
            align-self: flex-end;
            padding: 16px 32px;
            width: 100%;
            text-align: center;
            font-size: small;
            border-top: 1px solid #ddd;
            background-color: #fff;
            color: #999;
        }

        .ga-footer-links {
            font-size: 13px;
        }

        .ga-footer-links a {
            text-decoration: none;
            color: #15c;
            cursor: pointer;
        }

        .ga-footer-links a:visited {
            color: #61c;
        }

        label {
            margin-bottom: 0 !important;
        }

        md-input-container .md-input {
            padding: 0 !important;
        }

        md-toast {
            z-index: 1040 !important;
        }

        @@media (min-width: 600px) {
            md-toast.md-left {
                left: 18px !important;
            }

            md-toast.md-bottom {
                bottom: 18px !important;
            }
        }

        @@media (max-width: 959px) {
            md-toast {
                position: fixed !important;
            }
        }

        .md-button {
            margin: 0 !important;
            padding: 0 16px 0 16px !important;
        }

        .md-button.md-icon-button {
            margin: 0 6px !important;
            padding: 8px !important;
        }

        md-backdrop.md-dialog-backdrop {
            z-index: 1038 !important;
        }

        .md-dialog-container {
            z-index: 1039 !important;
        }

        md-backdrop.md-select-backdrop {
            z-index: 1040 !important;
        }

        .md-select-menu-container {
            z-index: 1041 !important;
        }

        .md-datepicker-is-showing .md-scroll-mask {
            z-index: 1011 !important;
        }

        .md-datepicker-calendar-pane {
            z-index: 1012 !important;
        }
    </style>

    @RenderSection("styles", false)

    <!-- Angular Material style sheet -->
    <link rel="stylesheet" href="https://ajax.googleapis.com/ajax/libs/angular_material/1.1.8/angular-material.min.css">

    <!-- Icons.css -->
    <link rel="stylesheet" href="~/assets/icons/fuse-icon-font/style.css">

    <!-- Animate.css -->
    <link rel="stylesheet" href="~/assets/vendor/animate.css/animate.min.css">

    <!-- PNotify -->
    <link rel="stylesheet" href="~/assets/vendor/pnotify/pnotify.custom.min.css">

    <!-- DataTables Extensions CSS-->
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/dt/b-1.5.1/sl-1.2.5/datatables.min.css">

    <!-- DataTables Editor CSS -->
    <link rel="stylesheet" type="text/css" href="~/assets/vendor/datatables/media/css/editor.dataTables.min.css">

    <!-- Perfect Scrollbar -->
    <link rel="stylesheet" href="~/assets/vendor/perfect-scrollbar/css/perfect-scrollbar.min.css">

    <!-- Fuse Html -->
    <link rel="stylesheet" href="~/assets/vendor/fuse-html/fuse-html.min.css">

    <!-- Main CSS -->
    <link rel="stylesheet" href="~/assets/css/main.css">
</head>
<body class="layout layout-vertical layout-left-navigation layout-below-toolbar" ng-app="docsApp" ng-cloak>
    <main>
        <div id="wrapper">
            <!-- Sidenav -->
            <aside id="aside" class="aside aside-left" data-fuse-bar="aside" data-fuse-bar-media-step="md" data-fuse-bar-position="left">
                <div class="aside-content-wrapper">
                    <div class="aside-content bg-primary-700 text-auto">
                        <div class="aside-toolbar">
                            <div class="logo">
                                <img class="logo-icon" src="~/assets/images/logos/fuse.svg" alt="Fuse">
                                <span class="logo-text">Smart Receptionist</span>
                            </div>

                            <button id="toggle-fold-aside-button" type="button" class="btn btn-icon d-none d-lg-block" data-fuse-aside-toggle-fold>
                                <i class="icon icon-backburger"></i>
                            </button>
                        </div>

                        <ul class="nav flex-column custom-scrollbar" id="sidenav" data-children=".nav-item">
                            <li class="subheader">
                                <span>APPS</span>
                            </li>

                            <li class="nav-item">
                                <a id="nav-link-dashboard" class="nav-link ripple" href="@Url.Action("Index", "AdminHome")">
                                    <i class="icon s-4 icon-view-dashboard"></i>
                                    <span>Dashboard</span>
                                </a>
                            </li>

                            <li class="nav-item">
                                <a id="nav-link-devices" class="nav-link ripple" href="@Url.Action("EchoDevices", "AdminHome")">
                                    <i class="icon s-4 icon-cellphone-link"></i>
                                    <span>Echo Devices</span>
                                </a>
                            </li>

                            <li class="nav-item">
                                <a id="nav-link-staff" class="nav-link ripple" href="@Url.Action("Staff", "AdminHome")">
                                    <i class="icon s-4 icon-account"></i>
                                    <span>Staff</span>
                                </a>
                            </li>

                            <li class="nav-item">
                                <a id="nav-link-floor-directory" class="nav-link ripple" href="@Url.Action("FloorDirectory", "AdminHome")">
                                    <i class="icon s-4 icon-map-marker"></i>
                                    <span>Floor Directory</span>
                                </a>
                            </li>

                            <li class="nav-item">
                                <a id="nav-link-lost-and-found" class="nav-link ripple" href="@Url.Action("LostAndFound", "AdminHome")">
                                    <i class="icon s-4 icon-database"></i>
                                    <span>Lost and Found</span>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </aside>
            <!-- End sidenav -->

            <div class="content-wrapper">
                <!-- Navbar -->
                <nav id="toolbar" class="bg-white">
                    <div class="row no-gutters align-items-center flex-nowrap">
                        <div class="col">
                            <div class="row no-gutters align-items-center flex-nowrap">
                                <button type="button" class="toggle-aside-button btn btn-icon d-block d-lg-none" data-fuse-bar-toggle="aside">
                                    <i class="icon icon-menu"></i>
                                </button>
                            </div>
                        </div>

                        <div class="col-auto">
                            <div class="row no-gutters align-items-center justify-content-end">
                                <div class="user-menu-button dropdown">
                                    <div class="dropdown-toggle ripple row align-items-center no-gutters px-2 px-sm-4" role="button" id="dropdownUserMenu" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        <i class="icon s-8 icon-account-multiple"></i>
                                        <span class="username mx-3 d-none d-md-block">@User.Identity.Name</span>
                                    </div>

                                    <div class="dropdown-menu" aria-labelledby="dropdownUserMenu">
                                        <a class="dropdown-item" href="https://aad.portal.azure.com" target="_blank">
                                            <div class="row no-gutters align-items-center flex-nowrap">
                                                <i class="icon-format-list-bulleted"></i>
                                                <span class="px-3">Azure AD admin center</span>
                                            </div>
                                        </a>

                                        <div class="dropdown-divider"></div>

                                        <a class="dropdown-item" href="@Url.Action("SignOut", "Account")">
                                            <div class="row no-gutters align-items-center flex-nowrap">
                                                <i class="icon-logout"></i>
                                                <span class="px-3">Sign out</span>
                                            </div>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </nav>
                <!-- End navbar -->

                <div class="content custom-scrollbar">
                    @RenderBody()

                    <!-- Footer -->
                    <div layout="row" flex="noshrink" layout-align="center center" class="layout-align-center-center layout-row flex-noshrink">
                        <div id="license-footer" flex="" class="ng-binding flex">
                            <span>© 2018 Smart Receptionist</span>
                            <span class="ga-footer-links">
                                |
                                <a href="@Url.Action("Index", "AdminHome")" class="md-ga-theme">
                                    Console Home
                                </a>
                                |
                                <a href="https://www.google.com/analytics/tos.html?hl=en_US" target="_blank" class="md-ga-theme">
                                    Terms of Service
                                </a>
                                |
                                <a href="https://www.google.com/policies/privacy/?hl=en_US" target="_blank" class="md-ga-theme">
                                    Privacy Policy
                                </a>
                            </span>
                        </div>
                    </div>
                    <!-- End footer -->
                </div>
            </div>
        </div>
    </main>

    <!-- Scripts -->

    <!-- jQuery -->
    <script src="~/assets/vendor/jquery/dist/jquery.min.js"></script>

    <!-- Angular.js Libraries -->
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.6.9/angular.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.6.9/angular-animate.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.6.9/angular-aria.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.6.9/angular-messages.min.js"></script>

    <!-- Angular Material Library -->
    <script src="https://ajax.googleapis.com/ajax/libs/angular_material/1.1.8/angular-material.min.js"></script>

    <!-- Mobile Detect -->
    <script src="~/assets/vendor/mobile-detect/mobile-detect.min.js"></script>

    <!-- Perfect Scrollbar -->
    <script src="~/assets/vendor/perfect-scrollbar/js/perfect-scrollbar.jquery.min.js"></script>

    <!-- Popper.js -->
    <script src="~/assets/vendor/popper.js/index.js"></script>

    <!-- Bootstrap -->
    <script src="~/assets/vendor/bootstrap/bootstrap.min.js"></script>

    <!-- DataTables JS -->
    <script src="~/assets/vendor/datatables.net/js/jquery.dataTables.min.js"></script>
    <script src="~/assets/vendor/datatables.net/js/dataTables.ellipsis.js"></script>
    <script src="~/assets/vendor/datatables-responsive/js/dataTables.responsive.js"></script>

    <!-- DataTables Extensions JS -->
    <script type="text/javascript" src="https://cdn.datatables.net/v/dt/b-1.5.1/sl-1.2.5/datatables.min.js"></script>

    <!-- DataTables Editor JS -->
    <script type="text/javascript" src="~/assets/vendor/datatables/media/js/dataTables.editor.min.js"></script>

    <!-- PNotify -->
    <script src="~/assets/vendor/pnotify/pnotify.custom.min.js"></script>

    <!-- Fuse Html -->
    <script src="~/assets/vendor/fuse-html/fuse-html.min.js"></script>

    <!-- Main JS -->
    <script src="~/assets/js/main.js"></script>

    <script>
        angular.module('docsApp', ['ngMaterial', 'ngMessages']);
    </script>

    @RenderSection("scripts", false)
</body>
</html>

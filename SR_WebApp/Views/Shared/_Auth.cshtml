<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1" />
    <title>@ViewBag.Title - Smart Receptionist</title>

    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:400,100,100italic,300,300italic,400italic,500,500italic,700italic,700,900,900italic">

    <!-- Styles -->
    <style>
        [fuse-cloak],
        .fuse-cloak {
            display: none !important;
        }

        body {
            height: auto !important;
        }

        form > button.md-button {
            display: block !important;
            margin-bottom: 16px;
            margin-top: 16px;
            width: 22rem;
        }

        md-checkbox {
            margin-bottom: 0 !important;
        }

        a.md-button {
            min-height: 0;
            min-width: 0;
            line-height: inherit;
            padding: 0;
            margin: 0;
            text-transform: none;
            font-size: 13px;
        }

        md-input-container > label {
            margin-bottom: 0;
        }

        md-input-container .md-input {
            padding: 0 !important;
        }
    </style>
    
    <!-- Angular Material style sheet -->
    <link rel="stylesheet" href="https://ajax.googleapis.com/ajax/libs/angular_material/1.1.8/angular-material.min.css">

    <!-- Icons.css -->
    <link rel="stylesheet" href="~/assets/icons/fuse-icon-font/style.css">

    <!-- Animate.css -->
    <link rel="stylesheet" href="~/assets/vendor/animate.css/animate.min.css">

    <!-- PNotify -->
    <link rel="stylesheet" href="~/assets/vendor/pnotify/pnotify.custom.min.css">

    <!-- Perfect Scrollbar -->
    <link rel="stylesheet" href="~/assets/vendor/perfect-scrollbar/css/perfect-scrollbar.min.css">

    <!-- Fuse Html -->
    <link rel="stylesheet" href="~/assets/vendor/fuse-html/fuse-html.min.css">

    <!-- Main CSS -->
    <link rel="stylesheet" href="~/assets/css/main.css">
</head>
<body class="layout layout-vertical" ng-app="docsApp" ng-cloak>
    <main>
        <div id="wrapper">
            <div class="content-wrapper">
                <div class="content custom-scrollbar">
                    @RenderBody()
                </div>
            </div>
        </div>
    </main>

    <!-- Scripts -->

    <!-- jQuery -->
    <script src="~/assets/vendor/jquery/dist/jquery.min.js"></script>

    <!-- Mobile Detect -->
    <script src="~/assets/vendor/mobile-detect/mobile-detect.min.js"></script>

    <!-- Perfect Scrollbar -->
    <script src="~/assets/vendor/perfect-scrollbar/js/perfect-scrollbar.jquery.min.js"></script>

    <!-- Popper.js -->
    <script src="~/assets/vendor/popper.js/index.js"></script>

    <!-- Bootstrap -->
    <script src="~/assets/vendor/bootstrap/bootstrap.min.js"></script>

    <!-- DataTables JS -->
    <script src="~/assets/vendor/datatables/media/js/jquery.dataTables.min.js"></script>
    <script src="~/assets/vendor/datatables-responsive/js/dataTables.responsive.js"></script>

    <!-- PNotify -->
    <script src="~/assets/vendor/pnotify/pnotify.custom.min.js"></script>

    <!-- Fuse Html -->
    <script src="~/assets/vendor/fuse-html/fuse-html.min.js"></script>

    <!-- Main JS -->
    <script src="~/assets/js/main.js"></script>
    
    <!-- Angular.js Libraries -->
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.6.9/angular.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.6.9/angular-animate.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.6.9/angular-aria.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.6.9/angular-messages.min.js"></script>

    <!-- Angular Material Library -->
    <script src="https://ajax.googleapis.com/ajax/libs/angular_material/1.1.8/angular-material.min.js"></script>
    
    <script>
        angular.module('docsApp', ['ngMaterial', 'ngMessages']);
    </script>

    @RenderSection("scripts", false)
</body>
</html>
